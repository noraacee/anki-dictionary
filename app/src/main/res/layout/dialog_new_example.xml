<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/japanese"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/anki_hint_japanese"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="@dimen/padding_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/english"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/anki_hint_english"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:padding="@dimen/padding_primary"
        app:layout_constraintTop_toBottomOf="@id/japanese"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/button_create"
        android:padding="@dimen/padding_primary"
        app:layout_constraintTop_toBottomOf="@+id/english"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Base.TextAppearance.AppCompat.Button"/>

</android.support.constraint.ConstraintLayout>